<div class="booked-rooms">
  <h2>予約ルームの一覧</h2>

  <table>
    <thead>
      <tr>
        <th>ルームイメージ</th>
        <th>ルーム名</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約人数</th>
        <th>合計料金</th>
        <th>予約した日</th>
        <th>予約のキャンセル</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @bookings.each do |booking| %>
          <% @hotels = Hotel.where(id: booking.hotel_id) %>
            <% @hotels.each do |hotel| %>
              <td><%= link_to image_tag(hotel.image), hotel_path(hotel) %></td>
              <td><%= link_to hotel.room_name, hotel_path(hotel), class: "room-name" %></td>
              <td><%= booking.start_date.to_s(:datetime_jp) %></td>
              <td><%= booking.end_date.to_s(:datetime_jp) %></td>
              <td><%= booking.person_num %>名</td>
              <td><%= hotel.price * booking.person_num %> 円</td>
              <td><%= booking.created_at.to_s(:datetime_jp) %></td>
              <%# <><%= booking.user_id
              <%= booking.hotel_id %>
              <td><%= button_to "キャンセル" ,booking_path(booking), method: :delete %></td>
      </tr>
      <tr>
              <td colspan="8" class="booked-room-introduction"><%= hotel.room_introduction %></td>
      </tr>
            <% end %>
        <% end %>
    </tbody>
  </table>
</div>