<div class="room-details">
  <div class="details">
    <%= image_tag @hotel.image, class: "image" %>

    <div class="main-detail">
      <h2><%= @hotel.room_name %></h2>
      <i class="fa fa-map-marker"></i>
      <p><%= @hotel.address %></p>
    </div>

    <p class="detail-introduction"><%= @hotel.room_introduction %></p>
  </div>

  <div class="booking-form">
    <h2>１泊１人 <%= @hotel.price %> 円</h2>

    <%= render "shared/error", obj: @booking %>

    <%= form_with(model: @booking, url: confirm_bookings_path, data: { turbo: false }) do |f| %>
      <%= f.label :start_date, "開始日" %><br>
      <%= f.date_field :start_date %>
      <br>
      <%= f.label :end_date, "終了日" %><br>
      <%= f.date_field :end_date %>
      <br>
      <%= f.label :person_num, "人数" %><br>
      <%= f.number_field :person_num %>
      <br>
      <%# 予約したユーザーとの紐付け %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%# 予約先のホテルとの紐付け %>
      <%= f.hidden_field :hotel_id, value: @hotel.id %>
      <br>
      <div class="booking-button">
        <input type="button" onclick="submit();" value="予約する" />
      </div>
    <% end %>
  </div>
</div>
