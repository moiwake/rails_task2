<div class="sign-up">
  <h2>新しいアカウントの登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="sign-up-form">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名" %>
    </div>

    <div class="sign-up-form">
      <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="sign-up-form">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（６文字以上）" %>
    </div>

    <div class="sign-up-form">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
    </div>

    <div class="sign-up-button">
      <input type="button" onclick="submit();" value="新しいアカウントを作成" />
    </div>
  <% end %>

  <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path %>
</div>